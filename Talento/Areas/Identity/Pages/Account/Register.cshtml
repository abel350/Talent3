@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";


    System.Data.DataTable dt = new System.Data.DataTable();
    dt = Talento.Clases.Estados.DatosEstados();

}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Crear Nueva Cuenta</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Nombre"></label>
                <input asp-for="Input.Nombre" class="form-control" />
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
           
                
            <div class="form-group">
                <label asp-for="Input.Estado"></label>
                <select asp-for="Input.Estado" id="inputState" title="Tipo de Memebresía" class="form-control">

                    @{for (int i =0; i<dt.Rows.Count; i++)
                        {
                            if(i == 0)
                            {
                            <option selected>@dt.Rows[i][1].ToString().Trim()</option>
                            }
                            else
                            {                            
                             <option>@dt.Rows[i][1].ToString().Trim()</option>
                            }
                        }

                    }
                </select>
                <span asp-validation-for="Input.Estado" class="text-danger"></span>
            </div>
                @*<input asp-for="Input.Estado" class="form-control" />*@
               
           
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Registrar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
