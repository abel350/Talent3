@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registro";

    System.Data.DataTable dt = new System.Data.DataTable();
    dt = Talento.Clases.Estados.DatosEstados();
}
<div class="container-fluid px-4 mt-3">

<h2>REGISTRO</h2>
<h4>Se ha asociado tu cuenta de  @Model.LoginProvider.</h4>
<hr />

<h4 class="text-info">
    Solo por única vez necesitamos que ingreses los siguientes datos para crear tu cuenta
    @*Please enter an email address for this site below and click the Register button to finish
    logging in.*@
</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Apaterno" class="control-label"></label>
                <input asp-for="Input.Apaterno" class="form-control" />
                <span asp-validation-for="Input.Apaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Amaterno" class="control-label"></label>
                <input asp-for="Input.Amaterno" class="form-control" />
                <span asp-validation-for="Input.Amaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nombre" class="control-label"></label>
                <input asp-for="Input.Nombre" class="form-control" />
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Estado"></label>
                <select asp-for="Input.Estado" id="inputState" title="Estado" class="form-control">

                    @{for (int i = 0; i < dt.Rows.Count; i++)
                        {
                            if (i == 0)
                            {
                                <option selected>@dt.Rows[i][1].ToString().Trim()</option>
                            }
                            else
                            {
                                <option>@dt.Rows[i][1].ToString().Trim()</option>
                            }
                        }

                    }
                </select>
                <span asp-validation-for="Input.Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" disabled ="disabled" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
</div>
</div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

