            <label asp-for="TipoMembresia" class="control-label"></label>
            <input asp-for="TipoMembresia" class="form-control" />
            <span asp-validation-for="TipoMembresia" class="text-danger"></span>
        </div>*@

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-lg btn-primary" />
            </div>
        </form>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
